<UserControl x:Class="ch.hsr.wpf.gadgeothek.ui.Gadget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ch.hsr.wpf.gadgeothek.ui"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" Margin="5">
            <TextBlock Style="{StaticResource TitleStyle}" DockPanel.Dock="Top">Gadgets</TextBlock>
            <DataGrid></DataGrid>
        </DockPanel>
        <DockPanel Grid.Column="1" Margin="5">
            <TextBlock Style="{StaticResource TitleStyle}" DockPanel.Dock="Top">Details</TextBlock>
            <GroupBox x:Name="GroupBox" Header="GadgetName" VerticalAlignment="Top"/>
            <Button Content="Delete Gadget" DockPanel.Dock="Bottom" HorizontalAlignment="Right"/>
            <Button Content="Add Gadget" DockPanel.Dock="Bottom" HorizontalAlignment="Right"/>
            <TextBlock></TextBlock>
        </DockPanel>
    </Grid>
</UserControl>
